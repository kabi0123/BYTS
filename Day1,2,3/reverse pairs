class Solution {
    public static int reversePairs(int arr[] ) {
     int pairs=0;
     for(int i=0;i<arr.length;i++)
     {
         for(int j=i+1;j<arr.length;j++)
         {
             if(arr[i] > 2*arr[j])
             pairs++;
         }
         //return pairs;
     }   
      return pairs;
    }
    public static void main(String args)
    {
        int arr[]={1,3,2,3,1};
        System.out.println("The reverse pairs are  "+ reversePairs(arr));
    }
}
